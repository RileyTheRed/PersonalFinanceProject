<Page x:Class="PersonalFinanceProjectFinal.Pages.AddRecordsPlaceHolder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonalFinanceProjectFinal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="428" d:DesignWidth="900"
      Title="AddRecordsPlaceHolder">

    <Grid Background="{Binding Color3}"
          Margin="140,0,140,0">

        <Rectangle Width="570" Height="380">
            <Rectangle.Fill>
                <SolidColorBrush Color="{Binding Color1}"/>
            </Rectangle.Fill>
        </Rectangle>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="24" Foreground="{Binding Color4}"
                   Width="400" TextAlignment="Center" TextWrapping="WrapWithOverflow">
            Please select an option above to enter new records. 
        </TextBlock>

    </Grid>
</Page>
